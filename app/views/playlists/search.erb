<h2>Select which songs you would like to add to <%=@playlist.name%></h2>
<br></br>

<form action="/songs" method="post">

  <label>Songs:</label>
    <%@array.each do |playlist|%>
      <%playlist.songs.each do |song|%>
        <input type="checkbox" name="song[]" id="<%= song.name %>" value="<%=song.id%>"><%=song.name%></input>
        <br></br>
      <%end%>
    <%end%>

  <br></br>
  <input type="submit" value="Create">

</form>
